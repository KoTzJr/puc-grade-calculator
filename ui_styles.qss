#btn_add{
    border-radius: 10px;
    background-repeat:not-repeat;
    width: 32px;
    height : 32px;
    qproperty-iconSize: 32px 32px;
}
#btn_add:hover {
    background-color: blue;
    border: none;
    border-radius: 10px;
    min-width: 40px;
    min-height: 40px;
    icon: url(:/img/img/mais.png);
}

#btn_remover {
        background-color: red;
        border: none;
        border-radius: 10px;
        min-width: 40px;
        min-height: 40px;
        icon: url(:/img/img/mais.png);

}

